<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<color name="blue">#379293</color>
	<color name="blue_trans">#77379293</color>
	<color name="grey">#DDDDDD</color>
	<color name="greyer">#AACCCCCC</color>

	<drawable name="play">@drawable/ic_action_play</drawable>
	<drawable name="pause">@drawable/ic_action_pause</drawable>
	<drawable name="stop">@drawable/ic_action_stop</drawable>
	<drawable name="volume">@drawable/ic_action_volume_on</drawable>
	<drawable name="volume_mute">@drawable/ic_action_volume_muted</drawable>

	<!-- Drawer style -->
	<style name="drawer">
		<item name="android:background">?android:attr/colorBackground</item>
	</style>

	<!-- Content directory style -->
	<style name="contentdirectory">
		<item name="android:background">@color/grey</item>
	</style>

	<!-- Renderer style -->
	<style name="renderer">
		<item name="android:background">?android:attr/colorBackground</item>
	</style>

	<!-- Content browsing duration/count style -->
	<style name="CountText" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/blue</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Pull to refresh style -->
	<style name="Widget.Custom.PtrHeader" parent="android:Widget">
		<item name="ptrProgressBarColor">@color/blue</item>
	</style>

	<!-- The light theme -->
	<style name="AppThemeLight" parent="android:Theme.Holo.Light.DarkActionBar" />

	<!-- Style selection -->
	<style name="AppTheme" parent="AppThemeLight">
		<item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
	</style>>


</resources>
